
ifndef current-folder

add-item = $(patsubst $\
						%,$\
						%.add,$\
						$(dirty-item))

.PHONY: commit

# $(info --------------------)
# $(info add-item = >$(add-item)<)
# $(info --------------------)

ifneq ($(dirty-item),)
pre-commit::
	@npx shx echo -n
commit:: pre-commit $(add-item)
	@git commit --message="$(or $(message),$(msg),$(m),updates)"
%.add:
	@git add $(patsubst %.add,%,$@)
else
commit::
	$(info Git working directory clean.)
	@npx shx true
endif

endif