
ifndef current-folder

add-file := $(patsubst $\
							%,$\
							%.add,$\
							$(strip $\
								$(shell git status --porcelain | awk '{print $$2}')))

.PHONY: commit

# $(info --------------------)
# $(info add-file = $(add-file))
# $(info --------------------)

ifdef add-file

commit:: $(add-file)
	@git commit --message=$(or $(message),unknown)

%.add:
	@git add $(patsubst %.add,%,$@)

else

commit::
	@npx shx echo -n
	
endif

endif