
ifndef current-folder

add-item = $(patsubst $\
						%,$\
						%.add,$\
						$(dirty-item))

.PHONY: commit

# $(info --------------------)
# $(info add-item = >$(add-item)<)
# $(info --------------------)

ifdef add-item
commit:: $(add-item)
	@git commit --message=$(or $(message),$(msg),$(m),updates)
%.add:
	@git add $(patsubst %.add,%,$@)
else
commit::
	@npx shx echo -n
endif

endif