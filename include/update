											
ifndef current-folder

.PHONY: pre-update update update-0 update-1

update:: pre-update update-0
	@npx shx true

pre-update:: ;

update-0:
	@npx npm-check-updates --upgrade
	@$(MAKE) update-1

ifneq ($(filter package.json,$(dirty-item)),)
update-1:
	@$(MAKE) re-install
else
update-1:
	@npx shx true
endif

endif