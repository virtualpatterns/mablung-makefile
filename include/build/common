binaryPath := $(projectPath)/node_modules/.bin

shx := $(binaryPath)/shx
eslint := $(binaryPath)/eslint
babel := $(binaryPath)/babel

contentOf =	$(strip \
							$(filter-out $(1)/.,\
							$(filter-out $(1)/..,\
								$(patsubst ./%,%,\
									$(wildcard $(1)/.*) $(wildcard $(1)/*)))))
